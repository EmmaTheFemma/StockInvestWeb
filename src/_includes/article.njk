---
layout: 'base.njk'
---

<article class="posts">
    <div class="container">

        <img src="{{ image }}" alt="{{ imageAlt }}">

        <div class="post-title">
            <h1>{{ title }}</h1>
            <p>Last updated on <span>{{ date | postDate }}</span></p>
        </div>

        <p class="post-description">
            {{ description }}
        </p>

        {{ content | safe }}    
         
    </div>   
</article>